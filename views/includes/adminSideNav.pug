// Side Navbar
nav.side-navbar
  // Sidebar Header
  .sidebar-header.d-flex.align-items-center
    .avatar
      img.img-fluid.rounded-circle(src=`/images/uploads/users/${user.photo}` alt='...')
    .title
      if user
        h1.h4 #{user.name}
        p #{user.role}
      else
        h1.h4 Unknown User
        p Unknown Role
  // Sidebar Navidation Menus
  span.heading Main
  ul.list-unstyled
    each item in h.adminNav
      li(class=(currentPath.endsWith(item.slug) ? 'active' : ''))
        a(href=item.slug aria-expanded=item.aria data-toggle=item.dataToggle)
          i.material-icons #{item.icon}
          | #{item.title}
        if item.drops
          ul.collapse.list-unstyled(id=`${item.itemsId}`)
            each drop in item.drops
              li
                a(href=drop.dropLink)
                  i.material-icons #{drop.dropIcon}
                  | #{drop.dropTitle}
    



